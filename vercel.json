{
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/server/server.js"
    }
  ],
  "functions": {
    "server/server.js": {
      "memory": 1024,
      "maxDuration": 10
    }
  },
  "routes": [
    { "handle": "filesystem" },
    { "src": "/.*", "dest": "/index.html" }
  ]
}